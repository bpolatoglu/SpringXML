<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:c="http://www.springframework.org/schema/c"
	
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context 				http://www.springframework.org/schema/context/spring-context-3.0.xsd">


	<bean id="accountDAO" class="com.turkcell.spring.demos.dao.AccountDAO" p:tableName="T_ACCOUNT"/>
	<bean id="bankDAO" class="com.turkcell.spring.demos.dao.BankDAO" p:tableName="T_BANK" init-method="init" />
	<bean id="customerDAO" class="com.turkcell.spring.demos.dao.CustomerDAO" p:tableName="T_CUSTOMER" />
	
	<bean id="accountService" class="com.turkcell.spring.demos.services.AccountService" p:accountDAO-ref="accountDAO" 
			 />

	<bean id="customerService" class="com.turkcell.spring.demos.services.CustomerService" 
			p:available="true" p:customerDAO-ref="customerDAO" init-method="init" depends-on="bankService"/>	
	
	
	<bean id="bankService" class="com.turkcell.spring.demos.services.BankService" 
				c:bankDAO-ref="bankDAO" c:customerDAO-ref="customerDAO" 
				init-method="init"/>

	<bean id="endOfDayService" class="com.turkcell.spring.demos.services.EndOfDayService" init-method="init" 
			lazy-init="true"/>

	
	<!--  method invocation example -->

	<bean id="queue" class="com.turkcell.spring.demos.methodinvocation.Queue" p:name="singleton-one"/>
	<bean id="asyncQueue" class="com.turkcell.spring.demos.methodinvocation.AsyncQueue" p:name="prototype-one" 
			scope="prototype" />
	<bean id="queueManager" class="com.turkcell.spring.demos.methodinvocation.QueueManager" p:queue-ref="queue">
		<lookup-method bean="asyncQueue" name="createAsyncQueue"/>
	</bean>


</beans>
 